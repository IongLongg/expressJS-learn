extends ../layouts/index-layout.pug

block content
    h1 
        span.mr-3 Users
        a.btn.btn-primary(href="/users/create") New 

    .d-flex.align-items-center
        form.ml-auto.d-flex(action="/users/search", method="GET")
            input.form-control(type="text", name="q")
            button(class="btn btn-primary ml-2") Search
    table.table
        tr 
            th Name
            th Phone
            th
        
        each user in users 
            tr
                td= user.name
                td= user.phone
                td
                    a(href="/users/" + user.id, class="btn btn-secondary") View
